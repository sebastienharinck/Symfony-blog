{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-8">
        <h1>Posts list</h1>

        {% for post in posts %}

            <a href="{{ path('post_show', { 'id': post.id }) }}">
                <h2>{{ post.title }}</h2>
            </a>

            <p>{{ post.content }}</p>

            <a class="btn btn-primary" href="{{ path('post_edit', { 'id': post.id }) }}">edit</a>

        {% endfor %}

        <div>
            <a class="btn btn-success" href="{{ path('post_new') }}">Create a new post</a>
        </div>

    </div>

{% endblock %}
